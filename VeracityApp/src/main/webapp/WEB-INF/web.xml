<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>VeracityApp</display-name>
  <welcome-file-list>
    <welcome-file>landingPage.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>registerUser</servlet-name>
  <servlet-class>servletServer.RegisterServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>registerUser</servlet-name>
  <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>updateUser</servlet-name>
  <servlet-class>servletServer.UpdateServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>updateUser</servlet-name>
  <url-pattern>/updateUser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>deleteUser</servlet-name>
  <servlet-class>servletServer.DeleteServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>deleteUser</servlet-name>
  <url-pattern>/deleteUser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>deleteAllUser</servlet-name>
  <servlet-class>servletServer.DeleteAllServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>deleteAllUser</servlet-name>
  <url-pattern>/deleteAllUser</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>selectUser</servlet-name>
  <servlet-class>servletServer.SelectServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>selectUser</servlet-name>
  <url-pattern>/selectUser</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>selectAllUser</servlet-name>
  <servlet-class>servletServer.SelectAllServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>selectAllUser</servlet-name>
  <url-pattern>/selectAllUser</url-pattern>
  </servlet-mapping>
  
</web-app>