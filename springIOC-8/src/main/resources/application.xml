<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:p="http://www.springframework.org/schema/p"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://www.springframework.org/schema/beans 
     http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="adr" class="com.nt.Address" p:city="jalgaon" p:state="maharashtra" p:pincode="425001"></bean>


	<bean id="emp" class="com.nt.Employee" autowire="byName" p:id="101" p:name="Hemraj" p:sal="56000" p:adr-ref="adr" scope="prototype"></bean>
	
	<bean id="em" class="com.nt.Employee" autowire="byName" p:id="102" p:name="raj" p:sal="6000" p:adr-ref="adr"></bean>

</beans>